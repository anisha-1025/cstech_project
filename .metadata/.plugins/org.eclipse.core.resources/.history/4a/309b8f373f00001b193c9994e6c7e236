package Java_Interview_questions;

public class String_contains_digits_only {

	public static void main(String[] args) {
		String str="123";
	
	if(str.matches("[0-9]+"))
	{
		System.out.println("String contains only digit");
		isalpha(str);
	}
	else
	{
		System.out.println("calling isalpha method");
		isalpha(str);
		
	}
	

	
	
	}

	static void isalpha(String input)
	{
		if(input.matches("[^A-Z]"))
		
		{
			System.out.println("String contains alphabbets");
		}
		else
		{
			System.out.println("String contains other than alphabets");
		}
		
	}
}
