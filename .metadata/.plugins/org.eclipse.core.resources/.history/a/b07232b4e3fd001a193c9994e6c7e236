package Java_Interview_questions;

public class String_Split_words {

	public static void main(String[] args) {
	
		String input="   Good, Morning, Everyone? How are you doing?";
		String input1="   Good, Morning, Everyone? How, are, you doing?";
		String input2="   Good: Morning: Everyone?: How: are: you doing?";
		String[] words= input.split("\\s+");
		String[] words1= input.split(",");
		String[] words2= input.split(":");
		int input_lenght= words.length;
		System.out.println(input_lenght);
		for(int i=0; i< words.length; i++)
		{
			System.out.println(words[i]);
		}
		
		for(int i=0; i< words1.length; i++)
		{
			System.out.println(words1[i]);
		}
		
		for(String str: words2)
		{
			System.out.println(str);
		}
	
		

	}

}
